function convertNodeListToArray(list) {
	var array = [];

	for(var i = 0; i < list.length; i++) {
		array.push(list[i]);
	}
	return array;
}

var nodeList = document.getElementsByTagName('p');
var paragraphs = convertNodeListToArray(nodeList);
paragraphs.forEach(function(paragraph) {
	...
});























